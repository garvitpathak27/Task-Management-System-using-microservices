# Application
SERVER_PORT=8081
SPRING_PROFILES_ACTIVE=default

# MongoDB
MONGODB_URI=mongodb://localhost:27017/userData

# Eureka service discovery
EUREKA_SERVER_URI=http://localhost:8085/eureka

# Distributed tracing (Zipkin)
ZIPKIN_BASE_URL=http://localhost:9411
ZIPKIN_SAMPLER_PROBABILITY=1.0

# JWT configuration (secret must be at least 32 characters)
TASK_JWT_SECRET=replace-with-your-32-char-minimum-secret-value
TASK_JWT_ACCESS_TOKEN_TTL_MINUTES=1440

# CORS configuration
TASK_ALLOWED_ORIGINS=http://localhost:3000
TASK_ALLOWED_HEADERS=*
TASK_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
TASK_ALLOW_CREDENTIALS=true
TASK_CORS_MAX_AGE=3600

# Logging
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=INFO
